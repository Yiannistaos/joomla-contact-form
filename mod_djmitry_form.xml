<?xml version="1.0" encoding="utf-8"?>
<extension type="module" method="upgrade" client="site">
	<name>MOD_DJMITRY_FORM</name>
	<creationDate>2019</creationDate>
	<author>Dmitry Zagainov</author>
	<authorEmail>d.i.ma.92@mail.ru</authorEmail>
	<authorUrl>https://github.com</authorUrl>
	<copyright>Copyright © 2019 - All rights reserved.</copyright>
	<license>MIT</license>
	<version>1.0.0</version>
	<description>MOD_DJMITRY_FORM_DESCRIPTION</description>
	<files>
		<filename module="mod_djmitry_form">mod_djmitry_form.php</filename>
		<filename>mod_djmitry_form.xml</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>validator.php</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" label="Настройка">
				<field 
					name="title"  
					type="text" 
					label="Заголовок"
					description=""
					default=""
					filter="safehtml" 
					required="required"
				/>
				<field 
					name="text"  
					type="text" 
					label="Текст"
					description=""
					default=""
					filter="safehtml" 
				/>
				<field 
					name="email"  
					type="text" 
					label="Почта"
					description="Можно несколько через запятую"
					default=""
					filter="string" 
					required="required"
				/>
				<field 
					name="subject"  
					type="text" 
					label="Заголовок письма"
					description=""
					default=""
					filter="string" 
					required="required"
				/>
				<field 
					name="message_send"  
					type="textarea" 
					label="Сообщение после отправки"
					description=""
					default="Успешно отправлено!"
					filter="string" 
					required="required"
				/>
				<field 
					name="fields_settings"  
					type="textarea" 
					cols="40" 
					rows="10"
					label="Поля"
					description="В формате json"
					default="{}"
					filter="string" 
					required="required"
				/>
				<field 
					name="yandex_metrika"  
					type="text" 
					label="Яндекс метрика id"
					default=""
					filter="string" 
				/>
				<field 
					name="yandex_goal"  
					type="text" 
					label="Яндекс цель"
					default=""
					filter="string" 
				/>
				<field name="modal" type="checkbox" label="Всплывающая форма" value="1" />
				<field name="disable_css" type="checkbox" label="Отключить стили" value="1" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
			<fieldset name="fields" label="fields" addfieldpath="/modules/mod_djmitry_form/fields">
				<field type="assetsfield" />
			</fieldset>
		</fields>
	</config>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.mod_djmitry_form.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_djmitry_form.ini</language>
	</languages>
</extension>